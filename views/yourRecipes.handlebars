<html>
  <head>
  	<title>Your Recipes</title>
    <meta charset="utf-8">
  	<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/index.css">
  	<link href="/css/bootstrap.css" rel="stylesheet">
  	<link href="/css/bootstrap-theme.css" rel="stylesheet">

    <script src="https://code.jquery.com/jquery.js"></script>
  	<script src="/js/bootstrap.js"></script>
    <script src="/js/updateInput.js"></script>
  </head>

  <body>

    <nav class="navbar navbar-default navbar-static-top">
        <a type="button" class="btn pull-left" href="javascript:history.back()">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
      <div class="navbar-brand"><h3>Your recipe</h3></div>
      <div class="pull-right">
        <a tabindex="0" class="btn" role="button" data-toggle="popover" data-placement="bottom" data-trigger="focus" data-content="This is where your recipe is displayed">
            <span class="glyphicon glyphicon-question-sign"></span>
        </a>
      </div>
    </nav>

    <div class="hero">
      <div class="btn-box">
          <button id="btn1" onclick="openSaved()">Saved</button>
          <button id="btn2" onclick="openCreated()">Created</button>
      </div>
      <div id="content1" class="content">
        <!-- Pre-set data
        <a href="/recipe/Vegetarian Burrito"><img src="https://www.thespruceeats.com/thmb/AAnECK7pIP9DrvVOFlM2CRRndWM=/4048x2696/filters:fill(auto,1)/vegetarian-bean-and-rice-burrito-recipe-3378550-hero-01-40ecbc08fcc84e80b8be853c1b779a13.jpg"></a>
        <a href="/recipe/Pepperoni Pizza"><img src="https://img.sndimg.com/food/image/upload/q_92,fl_progressive,w_1200,c_scale/v1/img/recipes/22/75/4/6SPX9PQ6WWdM49K06A1A_pizzaaa.jpg"></a>
        <a href="/recipe/Egg Fried Rice"><img src="https://i0.wp.com/seonkyounglongest.com/wp-content/uploads/2020/02/Egg-Fried-Rice-2.jpg?fit=1300%2C867&ssl=1"></a>
        -->
        {{#each recipes.[0].saved}}
        <a href="/recipe/{{name}}"><img src={{imageURL}}></a>
        {{/each}}
      </div>
      <div id="content2" class="content">
        <!-- Pre-set data
        <a href="/recipe/Grilled Cheese Sandwich"><img src="https://gatewaytoscience.org/wp-content/uploads/2020/07/grilled-cheese-sandwich.jpg"></a>
        <a href="/recipe/Egg Salad Sandwich"><img src="https://cdn3.tmbi.com/toh/GoogleImagesPostCard/Pesto-Egg-Salad-Sandwiches_exps89693_THHC2377559B01_09_3b_RMS.jpg"></a>
        <a href="/recipe/Egg Fried Rice"><img src="https://i0.wp.com/seonkyounglongest.com/wp-content/uploads/2020/02/Egg-Fried-Rice-2.jpg?fit=1300%2C867&ssl=1"></a>
        -->
        {{#each recipes.[1].created}}
        <a href="/viewCreated/{{name}}"><img src={{imageURL}}></a>
        {{/each}}
        <div class="container2">
          <a type="button" class="btn btn-lg" href="/create">
              <span class="glyphicon glyphicon-plus" style="color:#DE7C00;font-size:50px"></span>
          </a>
        </div>
      </div>
    </div>

    <div class="footer navbar navbar-default navbar-fixed-bottom text-left">
      <a type="button" class="btn btn-lg" style="margin-left: 30px" href="/index">
          <span class="glyphicon glyphicon-home"></span>
	  <a type="button" class="btn btn-lg" style="margin-left: 30px" href="/find">
          <span class=" glyphicon glyphicon-search "></span></a>
	  <a type="button" class="btn btn-lg" style="margin-left: 30px" href="/create">
          <span class=" glyphicon glyphicon-pencil "></span></a>
	  <a type="button" class="btn btn-lg" style="margin-left: 30px" href="/yourRecipes">
          <span class=" glyphicon glyphicon-book "></span></a>
    </div>

    <script>
      var content1 = document.getElementById("content1");
      var content2 = document.getElementById("content2");
      var btn1 = document.getElementById("btn1");
      var btn2 = document.getElementById("btn2");

      function openSaved(){
        content1.style.display = "initial";
        content2.style.display = "none";
        btn1.style.color = "#DE7C00";
        btn2.style.color = "#000";
      }
      function openCreated(){
        content1.style.display = "none";
        content2.style.display = "initial";
        btn1.style.color = "#000";
        btn2.style.color = "#DE7C00";
      }
    </script>

  </body>

</html>
