<html>
  <head>
  	<title>Create Recipe</title>
    <meta charset="utf-8">
  	<meta name="viewport" content="width=device-width, initial-scale=1.0">
  	<link href="/css/bootstrap.css" rel="stylesheet">
  	<link href="/css/bootstrap-theme.css" rel="stylesheet">

    <script src="https://code.jquery.com/jquery.js"></script>
  	<script src="/js/bootstrap.js"></script>
    <script src="/js/updateInput.js"></script>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-static-top">
        <a type="button" class="btn pull-left" href="/">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
      <div class="navbar-brand"><h3>Create a recipe</h3></div>
      <div class="pull-right">
        <a tabindex="0" class="btn" role="button" data-toggle="popover" data-placement="bottom" data-trigger="focus" data-content="Simply create a recipe by typing in its name, ingredients, and instructions. You can add or remove as many ingredients or steps as you'd like, as long as you have at least one for each.">
            <span class="glyphicon glyphicon-question-sign"></span>
        </a>
      </div>
    </nav>

    <div class="container">
      <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" placeholder="Name of your recipe">
      </div>

      <div class="form-group">
        <label>Ingredients</label>
        <div id="inputFormRow">
            <input type="text" class="form-control" style="margin-bottom: 15px" placeholder="Enter measurement and ingredient">
        </div>
        <div id="newIng"></div>
        <div class="col text-left">
          <button id="addIng" type="button" class="btn btn-default">Add ingredient</button>
        </div>
      </div>

      <div class="form-group">
        <label>Instructions</label>
        <div id="inputFormRow2">
          <div class="input-group">
            <span id="quantity" class="input-group-addon" data-value="1">1</span>
            <input type="text" class="form-control" placeholder="Enter instruction">
          </div>
        </div>
        <div id="newInstr"></div>
        <div class="col text-left">
          <button id="addInstr" type="button" class="btn btn-default">Add step</button>
        </div>
      </div>

        <div class="col text-right" style="margin-top: 30px; margin-bottom: 80px">
          <a href="/reviewCreate"><button class="btn btn-lg btn-default">Next</button><a>
        </div>
    </div>

    <div class="footer navbar navbar-default navbar-fixed-bottom text-center">
      <a type="button" class="btn btn-lg" href="/">
          <span class="glyphicon glyphicon-home"></span>
      </a>
    </div>
  </body>

</html>
